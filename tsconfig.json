{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2015",
		"noImplicitAny": false,
		"baseUrl": "./src",
		"outDir": "dist",
		"paths": {
			"test/*": ["test/*"]
		},
		"lib": ["es2017", "dom"],
		"checkJs": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"typeRoots": ["./type-definitions/", "node_modules/@types"],
		"locale": "en"
	},
	"exclude": ["node_modules", "dist"]
}
